# FileName : manual/mldv2EnableRUT.rmt
BEGIN {}
END   {}

#------------------------------------------------------------------------------
# Include
#------------------------------------------------------------------------------
use strict;
use warnings;
use File::Basename;
use V6evalRemote;

#------------------------------------------------------------------------------
# Variable
#------------------------------------------------------------------------------
rArg() || goto error1;
my $basename    = basename($0, '.rmt');
my $prompt      = "$basename> ";

#------------------------------------------------------------------------------
# Main Procedure
#------------------------------------------------------------------------------
# autoflush on
$|=1;

# Display directions of manual operation.
print "\n";
print "lio_start". "\n"; 
print $prompt . "Please enable MLDv2 Router daemon/function.\n";
print $prompt . "Then, please press any key.\n";
print "lio_stop". "\n"; 

# Wait
<STDIN>;

# autoflush off
$|=0;

#------------------------------------------------------------------------------
# Termination
#------------------------------------------------------------------------------
# Exit w/ Pass
exit($V6evalRemote::exitPass);

# EOF
