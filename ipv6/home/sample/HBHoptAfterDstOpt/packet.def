//======================================================================
// Frame
Frame_Ether _ping {
	header=eth_auto;
	packet=ip_ping;
}
//----------------------------------------------------------------------
Frame_Ether _ns {
	header=eth_nut2tnsol;
	packet=ip_ns;
}
//----------------------------------------------------------------------
Frame_Ether _na {
	header=eth_auto;
	packet=ip_na;
}
//----------------------------------------------------------------------
Frame_Ether _paraProblem {
	header=eth_auto;
	packet=ip_problem;
}

//======================================================================
// Ether
Hdr_Ether eth_auto {
}
//----------------------------------------------------------------------
Hdr_Ether eth_nut2tnsol {
//	SourceAddress=nutether();
	DestinationAddress=v62ethermulti(v6merge("ff02::1:ff00:0000",104,tnv6()));
	Type=0x86dd; // ip6
}

//======================================================================
// Packet
Packet_IPv6 ip_ping {
	header=v6_auto;
	exthdr=_dst;
	exthdr=_hbh;
	upper=icmp_ping;
}
//----------------------------------------------------------------------
Packet_IPv6 ip_ns {
	header=v6nut2tnsol;
	upper=icmp_ns;
}
//----------------------------------------------------------------------
Packet_IPv6 ip_na {
	header=v6tn2nutadv;
	upper=icmp_na;
}
//----------------------------------------------------------------------
Packet_IPv6 ip_problem {
	header=v6_auto;
	upper=icmp_problem;
}

//======================================================================
// IPv6
Hdr_IPv6 v6_auto {
}
//----------------------------------------------------------------------

Hdr_IPv6 v6nut2tnsol {
//	SourceAddress=nutv6();
	DestinationAddress=tn2v6("ff02::1:ff00:0000",104);
//	DestinationAddress=any;
//	FlowLabel=0;
//	NextHeader=58;
//	TrafficClass=0;
	HopLimit=255;
//	PayloadLength=16;
}
//----------------------------------------------------------------------

Hdr_IPv6 v6tn2nutadv {
//	SourceAddress=tnv6();
//	DestinationAddress=nutv6();
//	FlowLabel=0;
//	NextHeader=58;
//	TrafficClass=0;
	HopLimit=255;
//	PayloadLength=16;
}

//======================================================================
// IPv6 Extension Headers
Hdr_HopByHop _hbh {
	option=_PadN;
	option=_ralert;
}
//----------------------------------------------------------------------
Opt_PadN _PadN {
	pad={};
}
//----------------------------------------------------------------------
Opt_RouterAlert _ralert {
	Value=0;
}
//----------------------------------------------------------------------
Hdr_Destination _dst {
	option=_Pad6;
}
//----------------------------------------------------------------------
Opt_PadN _Pad6 {
	pad={0,0,0,0};
}

//======================================================================
// ICMPv6
ICMPv6_EchoRequest icmp_ping {
//	Type=128;
//	Code=0;
//	Checksum=0x2c90;
//	Identifier=0x9008;
//	SequenceNumber=0;
	payload=apl;
}
//----------------------------------------------------------------------
ICMPv6_ParameterProblem icmp_problem {
	Code=1;
	Pointer=40;
	payload=original;
}
//----------------------------------------------------------------------
// NS
ICMPv6_NS icmp_ns {
//	Type=135;
//	Code=0;
//	Checksum=0xbd2d;
//	Reserved=zero;
//	TargetAddress=tnv6();
	option=sslopt_nut;
}
//----------------------------------------------------------------------
// NA ("TN -> NUT")
ICMPv6_NA icmp_na {
//	Type=136;
//	Code=0;
//	Checksum=0xb32a;
//	Reserved=zero;
	RFlag=1;
	SFlag=1;
	OFlag=1;
	TargetAddress=tnv6();
	option=ttlopt_tn;
}

//======================================================================
Opt_ICMPv6_TLL ttlopt_tn {
//	Type=2;
//	Length=1;
	LinkLayerAddress=tnether();	
}
//----------------------------------------------------------------------
Opt_ICMPv6_SLL sslopt_nut {
//	Type=1;
//	Length=1;
	LinkLayerAddress=nutether();
}

//======================================================================
// Data
Payload apl {
	data=0xb9;
	data=0xf9;
	data=0xa2;
	data=0x36;
	data=0x78;
	data=0x02;
	data=0x0d;
	data=0x00;
}

Payload original {
	data=right(ip_ping,0);
}
