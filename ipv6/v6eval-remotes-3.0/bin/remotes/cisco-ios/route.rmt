use V6evalRemote;

rOpen() || goto error;

$rOpt_timeout=5 if ! defined($rOpt_timeout);
$rOpt_netmask = "255.255.255.0" if ! defined($rOpt_netmask);
$rOpt_addrfamily = "inet6" if ! defined($rOpt_addrfamily);
$rOpt_addrtype = "host" if ! defined($rOpt_addrtype);
#$rOpt_cmd
#$rOpt_gateway
#$rOpt_if
#$rOpt_prefix
$rOpt_prefixlen=64 if !defined($rOpt_prefixlen);
#$rOpt_tunnelif

if(defined($rOpt_tunnelif)) {
    print "This command does not support tunnel yet\n";
    goto no_support;
}

if($rOpt_addrfamily eq "inet") {
    if($rOpt_cmd eq "add") {
	$cmd="ip route ";
    } elsif($rOpt_cmd eq "delete") {
	$cmd="no ip route ";
    } else {
	print "Must specify: cmd={add|delete}\n";
	goto error;
    }

    if(!defined($rOpt_prefix) || !defined($rOpt_gateway)) {
	print "Must specify: prefix=XXX gateway=XXX\n";
	goto error;
    }

    if($rOpt_prefix eq "default") {
	$cmd.="0.0.0.0 0.0.0.0 $rOpt_gateway";
    } else {
	if(!defined($rOpt_addrtype)) {
	    print "Must specify: addrtype={net|host}\n";
	    goto error;
	}

	if($rOpt_addrtype eq "net") {
	    if(!defined($rOpt_netmask)) {
		print "Must specify: netmask=XXX\n";
		goto error;
	    }
	    $cmd.="$rOpt_prefix $rOpt_netmask $rOpt_gateway";
	} else {
	    $cmd.="$rOpt_prefix 255.255.255.255 $rOpt_gateway";
	}
    }
} elsif($rOpt_addrfamily eq "inet6") {
    if($rOpt_cmd eq "add") {
	$cmd="ipv6 route ";
    } elsif($rOpt_cmd eq "delete") {
	$cmd="no ipv6 route ";
    } else {
	print "Must specify: cmd={add|delete}\n";
	goto error;
    }

    if(!defined($rOpt_prefix) || !defined($rOpt_gateway)) {
	print "Must specify: prefix=XXX gateway=XXX\n";
	goto error;
    }

    if($rOpt_prefix eq "default") {
	if ($rOpt_gateway =~ /^fe80/ || $rOpt_gateway =~ /^FE80/) {
		$cmd.="::/0 $rOpt_if $rOpt_gateway";
	}
	else {
		$cmd.="::/0 $rOpt_gateway";
	};
    } elsif ($rOpt_gateway =~ /^fe80/ || $rOpt_gateway =~ /^FE80/) {
	$cmd .= "$rOpt_prefix/$rOpt_prefixlen $rOpt_if $rOpt_gateway";
    } else {
	if(!defined($rOpt_prefixlen)) {
	    print "Must specify: prefixlen=XXX\n";
	    goto error;
	}
	$cmd.="$rOpt_prefix/$rOpt_prefixlen $rOpt_gateway";
    }
} else {
    print "Must specify: addrfamily={inet|inet6}\n";
    goto error;
}

rLogin($rOpt_timeout) || goto error;
rCommand("configure terminal", $rOpt_timeout) || goto error;
rCommand("$cmd", $rOpt_timeout) || goto error;
rCommand("exit", $rOpt_timeout) || goto error;
rLogout($rOpt_timeout) || goto error;

rClose();
exit($V6evalRemote::exitPass);

no_support:
    rClose();
    exit($V6evalRemote::exitNS);

error:
    rClose();
    exit($V6evalRemote::exitFail);

########################################################################
