use V6evalRemote;

rOpen() || goto error;

$rOpt_timeout=10 if ! defined($rOpt_timeout);

$prefix = "/usr/local/v6";

$racoon_pidfile = "/var/run/racoon.pid";
#$racoon_command = "/usr/local/v6/sbin/racoon";
$setkey = "${prefix}/sbin/setkey";

$setkey_cmd  = "$setkey -c \<\<EOD\r";
if (defined($rOpt_saddump)) {
	$setkey_cmd .= "dump;\r";
}
$setkey_cmd .= "flush;\r";
$setkey_cmd .= "EOD\r";

$kill_cmd = "kill -TERM `head -1 $racoon_pidfile`\r"; 

$rm_cmd = "/bin/rm -f ${racoon_pidfile}\r";

rLogin($rOpt_timeout) || goto error;

print STDOUT "$setkey_cmd\n" if $V6evalRemote::debug;
rCommand($setkey_cmd , $rOpt_timeout) || goto error;

print STDOUT "$kill_cmd\n" if $V6evalRemote::debug;
rCommand($kill_cmd , $rOpt_timeout) || goto error;

print STDOUT "$rm_cmd\n" if $V6evalRemote::debug;
rCommand($rm_cmd , $rOpt_timeout) || goto error;

rLogout($rOpt_timeout) || goto error;

rClose();
exit($V6evalRemote::exitPass);

error:
    rClose();
    exit($V6evalRemote::exitFail);

########################################################################
__END__

=head1 NAME

B<ikeResetSA.rmt> - reset IKE SA entry

=head1 SYNOPSIS

B<ikeResetSA.rmt> [-commonoption ...]

=head1 DESCRIPTION

NONE

=head1 RETURN VALUES

The B<ikeResetSA.rmt> exits with one of the following values:
 0  command completed successfully
 1  command failed

