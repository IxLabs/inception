use V6evalRemote;

rOpen() || goto error;
$system=rType();

#
$type=$V6evalTool::NutDef{Type};
if($rOpt_start && !$rOpt_link0) {
        print STDERR "Specify link0=XXX\n";
        goto error;
}

$rOpt_timeout=5 if ! defined($rOpt_timeout);

if (!defined($rOpt_cmd)) {
        print STDERR "Specify cmd=allow|block|include|exclude\n";
        goto error;
}
if (!defined($rOpt_addr)) {
        print STDERR "Specify addr=XXX\n";
        goto error;
}

$cmd = "echo \"$rOpt_cmd $rOpt_addr\" > igmpv3.conf";

rLogin($rOpt_timeout) || goto error;
rCommand($cmd, $timeout) || goto error;
send_signal("10") || goto error;
rLogout($rOpt_timeout) || goto error;

rClose();
exit($V6evalRemote::exitPass);

error:
    rClose();
    exit($V6evalRemote::exitFail);

notsupported:
    rClose();
    exit($V6evalRemote::exitNS);
#
sub send_signal($)
{
	my($sig)=@_;
    my(@lines);
    my($pid)=0;

    rCommand("ps ax | grep igmpv3listener | grep -v grep", $timeout) || goto error;
    @lines=rCmdOutput();
    shift(@lines); # remove command line
    pop(@lines);   # remove command prompt
    foreach(@lines) {
		if(/^\s*(\d+)\s+(\S+)\s+(\S+)\s+(\S+)\s+(\S+igmpv3listener)/) {
		}
		$pid=$1;
    }
    if($pid) {
		rCommand("kill -$sig $pid", $timeout) || goto error;
    }
    return(1);

error:
    return(0);
}

